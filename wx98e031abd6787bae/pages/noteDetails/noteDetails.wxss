.containerr {
    box-sizing: border-box;
    padding: 42rpx 34rpx;
}

.fuone {
    align-items: center;
    display: flex;
}

.time {
    color: #959595;
    font-size: 22rpx;
    font-weight: 500;
}

.open,.time {
    font-family: PingFang SC;
}

.open {
    background: #fab80d;
    border-radius: 4rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 700;
    height: 31rpx;
    line-height: 31rpx;
    margin-left: 20rpx;
    text-align: center;
    width: 59rpx;
}

.smalllove {
    height: 22rpx;
    width: 25rpx;
}

.numbe {
    align-items: center;
    background: #fff;
    border: 1rpx solid rgba(255,64,64,.52);
    border-radius: 18rpx 18rpx 18rpx 17rpx;
    box-sizing: border-box;
    display: flex;
    height: 35rpx;
    margin-left: 18rpx;
    padding: 0 10rpx;
}

.addnum {
    color: #ff4040;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: 700;
}

.edit {
    height: 32rpx;
    margin-bottom: 4rpx;
    margin-right: 4rpx;
    width: 32rpx;
}

.edittext {
    color: #959595;
    font-size: 28rpx;
}

.edittext,.wen {
    font-family: PingFang SC;
    font-weight: 500;
}

.wen {
    color: #5b5c64;
    font-size: 30rpx;
    line-height: 44rpx;
}

.bigimg {
    width: 100%;
}

.btn {
    height: 88rpx;
    line-height: 88rpx;
    margin: 60rpx auto 0;
    width: 436rpx;
}

.btn,.listshang {
    background: #ffc737;
    border-radius: 44rpx;
    box-shadow: 0 2rpx 8rpx 0 rgba(255,199,55,.68);
    color: #1b1b1b;
    font-family: PingFang SC;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
}

.listshang {
    height: 80rpx;
    line-height: 80rpx;
    width: 236rpx;
}