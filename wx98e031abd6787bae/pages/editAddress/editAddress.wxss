page {
    background-color: #fafafa;
}

.content {
    background: #fff;
    box-sizing: border-box;
    margin-top: 27rpx;
    padding: 0 24rpx 35rpx;
    width: 100%;
}

.list {
    border-bottom: 1px solid#d3d3d3;
    margin-top: 50rpx;
    padding-bottom: 20rpx;
    position: relative;
}

.pt63 {
    margin-top: 0;
    padding-top: 50rpx;
}

.name {
    color: #444;
    font-weight: 500;
    width: 280rpx;
}

.ipt,.name {
    font-family: PingFang SC;
    font-size: 32rpx;
}

.ipt {
    color: #313131;
    flex: 1;
    font-weight: 700;
    height: 45rpx;
}

.iptpl {
    color: #959595;
    font-family: PingFang SC;
    font-size: 30rpx;
    font-weight: 500;
}

.chick {
    background: linear-gradient(90deg,#e5e5e5,#b5b5b5);
    border-radius: 26rpx;
    height: 52rpx;
    position: absolute;
    right: 0;
    top: 0;
    width: 110rpx;
}

.chickac {
    background: linear-gradient(90deg,#f9c52c,#f9c52c);
}

.quan {
    background: #fff;
    border: 1px solid #bfbfbf;
    border-radius: 50%;
    box-shadow: 6rpx 0 10px 0 rgba(99,99,99,.13);
    height: 50rpx;
    transition: all .3s linear;
    width: 50rpx;
}

.quanac {
    box-shadow: 6rpx 0 10px 0 rgba(118,35,6,.13);
}

.footer {
    background: #fff;
    bottom: 0;
    height: 98rpx;
    left: 0;
    position: fixed;
    width: 100%;
}

.btn {
    background: #ffc82a;
    border-radius: 39rpx;
    color: #1c1c1c;
    font-family: PingFang SC;
    font-size: 30rpx;
    font-weight: 700;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    width: 522rpx;
}