page {
    background-color: #f8faff;
}

.content {
    padding: 0 20rpx;
}

.box,.content {
    box-sizing: border-box;
}

.box {
    background: #fff;
    border-radius: 10rpx;
    margin-top: 30rpx;
    padding-right: 20rpx;
    width: 100%;
}

.boximg {
    border-radius: 10rpx 0 0 10rpx;
    height: 220rpx;
    width: 226rpx;
}

.right3 {
    height: 28rpx;
    margin-left: 20rpx;
    width: 16rpx;
}

.title {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #303030;
    display: -webkit-box;
    font-family: PingFang SC;
    font-size: 34rpx;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
}

.boxright {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 24rpx 0 24rpx 31rpx;
}

.xian1 {
    height: 27rpx;
    margin-left: 23rpx;
    position: relative;
    width: 40rpx;
}

.xian2 {
    height: 100%;
    width: 4rpx;
}

.xian1 .xian2:nth-child(1) {
    animation: dong 1s linear infinite;
    background: #9f9f9f;
    bottom: 0;
    left: 0;
    position: absolute;
}

.xian1 .xian2:nth-child(2) {
    animation: dong .3s linear infinite;
    background: #9f9f9f;
    bottom: 0;
    left: 8rpx;
    position: absolute;
}

.xian1 .xian2:nth-child(3) {
    animation: dong 1.2s linear infinite;
    background: #9f9f9f;
    bottom: 0;
    left: 16rpx;
    position: absolute;
}

.xian1 .xian2:nth-child(4) {
    animation: dong 1.5s linear infinite;
    background: #9f9f9f;
    bottom: 0;
    left: 24rpx;
    position: absolute;
}

@-webkit-keyframes dong {
    0% {
        height: 2rpx;
    }

    50% {
        height: 20rpx;
    }

    100% {
        height: 10rpx;
    }
}

@keyframes dong {
    0% {
        height: 2rpx;
    }

    50% {
        height: 20rpx;
    }

    100% {
        height: 10rpx;
    }
}

.renxian {
    color: #9f9f9f;
    font-size: 26rpx;
    margin-top: -2rpx;
}

.renxian,.xiaz {
    font-family: PingFang SC;
    font-weight: 500;
}

.xiaz {
    background: #ffc729;
    border-radius: 26rpx;
    color: #1b1b1b;
    font-size: 24rpx;
    height: 53rpx;
    line-height: 53rpx;
    text-align: center;
    width: 156rpx;
}

.flexd {
    align-items: flex-end;
}